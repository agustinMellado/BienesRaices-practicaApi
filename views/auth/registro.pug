extends ../layout/index

block contenido
    .py-10
    <!- titulo->
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        <!- errores->
        if errores
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        <!- campos de formulario->
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action='/auth/registro' noValidate)
                
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-400(placeholder="Ingrese su Nombre" type="text" name="nombre")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-400(placeholder="Ingrese su Email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-400(placeholder="Ingrese su Contaseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Repetir Contraseña
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-400(placeholder="Repita su Contaseña" type="password" name="repetir_password")
                    div.flex.items-center
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesion
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 font-bold" type="submit" value="Crear cuenta")